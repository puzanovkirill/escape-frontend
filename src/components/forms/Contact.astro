<section>
  <div class='mx-auto max-w-6xl items-center px-8 py-32 md:px-12 2xl:max-w-7xl'>
    <div class='mx-auto max-w-xl text-center'>
      <p class='font-display text-4xl font-semibold tracking-tight text-black'>
        Get in contact
      </p>
      <p class='mt-4 text-lg tracking-tight text-gray-600'>
        A full width entry to use as a header
      </p>
    </div>

    <div class='mx-auto mt-12 max-w-xl'>
      <div class='mt-12 md:mt-0 md:flex-1'>
        <form class='flex w-full flex-col'>
          <div class='space-y-3'>
            <div>
              <label for='email-address' class='sr-only'>Your name</label>
              <input
                id='name'
                name='name'
                type='text'
                autocomplete='on'
                class='bg-wood-500 placeholder-mist-900 focus:border-salmon-500 focus:ring-salmon-500 block w-full appearance-none border border-transparent px-3 py-2 text-black focus:outline-none sm:text-sm'
                placeholder='Your email'
              />
            </div>
            <div>
              <label for='Your name' class='sr-only'>Company name</label>
              <input
                id='companyname'
                name='companyname'
                type='text'
                class='bg-wood-500 placeholder-mist-900 focus:border-salmon-500 focus:ring-salmon-500 block w-full appearance-none border border-transparent px-3 py-2 text-black focus:outline-none sm:text-sm'
                placeholder='Company name'
              />
            </div>
            <div>
              <label for='phone' class='sr-only'>Phone number</label>
              <input
                id='phone'
                name='phone'
                type='text'
                required
                class='bg-wood-500 placeholder-mist-900 focus:border-salmon-500 focus:ring-salmon-500 block w-full appearance-none border border-transparent px-3 py-2 text-black focus:outline-none sm:text-sm'
                placeholder='Your phone'
              />
            </div>
            <div>
              <label for='email-address' class='sr-only'>Email address</label>
              <input
                id='email-address'
                name='email-address'
                type='email'
                autocomplete='email'
                required
                class='bg-wood-500 placeholder-mist-900 focus:border-salmon-500 focus:ring-salmon-500 block w-full appearance-none border border-transparent px-3 py-2 text-black focus:outline-none sm:text-sm'
                placeholder='Your email'
              />
            </div>
            <div>
              <label for='email-address' class='sr-only'>your message</label>
              <textarea
                id='email-address'
                name='email-address'
                autocomplete='email'
                required
                class='bg-wood-500 placeholder-mist-900 focus:border-salmon-500 focus:ring-salmon-500 block w-full appearance-none border border-transparent px-3 py-2 text-black focus:outline-none sm:text-sm'
                placeholder='Your message ( optional )'></textarea>
            </div>
          </div>
          <div class='mt-3'>
            <button
              type='submit'
              class='hover:bg-mist-900 focus-visible:outline-mist-600 active:bg-mist-700 disabled:hover:bg-mist-600 inline-flex w-full justify-center bg-black px-4 py-1 text-base font-medium tracking-wide text-white focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 active:text-white/80 disabled:opacity-30'
            >
              Contact us
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
